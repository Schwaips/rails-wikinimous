<div class="center">

<h1>Publish a new article</h1>


  <%= form_for(@article) do |t| %>
    <%= t.label :title %>
    <%= t.text_field :title %>
    <br>
    <br>
    <%= t.label :content %>
    <%= t.text_field :content %>
    <br>
    <br>
    <%= t.submit class: "btn btn-primary" %>
<% end %>


<br>
<br>

<%= link_to articles_path do %>
<span><i class="fas fa-undo"> Back to the list </i></span>
<% end %>
</div>
